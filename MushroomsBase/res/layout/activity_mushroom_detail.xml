<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_brown_100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.csc.jsuarezardid.mushrooms_local.MushroomDetailActivity" >

        <ImageView
            android:id="@+id/iv_mushroom_detail_image"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@color/color_brown_300"
            android:contentDescription="@string/no_image_mushroom"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="-30dip"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_mushroom_detail_common_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center"
                    android:textColor="@color/color_brown_700"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mushroom_detail_binomial_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:gravity="center"
                    android:textColor="@color/color_brown_700" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="20dip"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp" >

            <TextView
                android:id="@+id/tv_mushroom_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:textColor="@color/color_brown_700" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>